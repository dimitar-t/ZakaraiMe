@model JourneyFormViewModel

<input asp-for="StartPointX" id="startPointX" type="hidden" />
<input asp-for="StartPointY" id="startPointY" type="hidden" />
<input asp-for="EndPointX" id="endPointX" type="hidden" />
<input asp-for="EndPointY" id="endPointY" type="hidden" />

<div class="form-group required">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" type="number" min="0" max="100" step="0.10" required class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-group required">
    <label asp-for="Seats" class="control-label"></label>
    <input asp-for="Seats" type="number" min="0" max="6" step="1" required class="form-control" />
    <span asp-validation-for="Seats" class="text-danger"></span>
</div>

<div class="form-group required">
    <label class="control-label">Кола</label>
    <select asp-for="CarId" required class="form-control">
        @foreach (CarListViewModel car in Model.DriverCars)
        {
            <option id="@(car.Id)">@car.Model.Make.Title @car.Model.Title</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="SetOffTime"></label>
    <input asp-for="SetOffTime" type="text" required id="datetimePicker" class="form-control" />
    <span asp-validation-for="SetOffTime" class="text-danger"></span>
</div>