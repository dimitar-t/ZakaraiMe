@model JourneySearchViewModel

<form asp-controller="Journeys" asp-action="Search" class="journeyForm" method="post" id="journeyForm">
    <input asp-for="StartPointX" id="startPointX" type="hidden" />
    <input asp-for="StartPointY" id="startPointY" type="hidden" />
    <input asp-for="EndPointX" id="endPointX" type="hidden" />
    <input asp-for="EndPointY" id="endPointY" type="hidden" />

    <div class="row">
        <div class="form-group col-md-4 align-middle">
            <a class="btn btn-primary read-m text-white" data-toggle="modal" data-target="#exampleModalCenter">Изберете маршрут</a>
        </div>
        <div class="form-group required col-md-3 align-middle">
            <input asp-for="SetOffTime" type="text" required id="datetimePicker" class="form-control" />
            <span asp-validation-for="SetOffTime" class="text-danger"></span>
        </div>
        <div class="form-group required col-md-2 align-middle">
            <select class="form-control" asp-for="Radius">
                <option value="500" selected>Радиус на търсене</option>
                <option value="500">500 м</option>
                <option value="1000">1 км</option>
                <option value="2000">2 км</option>
                <option value="5000">5 км</option>
                <option value="10000">10 км</option>
            </select>
        </div>
        <div class="col-md-3 align-middle">
            <button type="submit" class="btn btn-primary submit">Търси</button>
        </div>
    </div>
</form>