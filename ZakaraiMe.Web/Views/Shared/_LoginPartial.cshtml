@inject UserManager<User> userManager
@{
    User currentUser = await userManager.GetUserAsync(User);
}

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Изход</a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Update" asp-route-id="@currentUser.Id">Здравей, @currentUser.FirstName!</a></li>
}
else
{
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>
}