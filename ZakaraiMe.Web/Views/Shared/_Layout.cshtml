<body>
    <!--/banner-->
    @{
        var controller = ViewContext.RouteData.Values["Controller"].ToString();
        var action = ViewContext.RouteData.Values["Action"].ToString();
    }
    <div class="banner-inner" id="home">
        <!-- header -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light top-header">
                <button class="navbar-toggler mx-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- search -->
                <div class="search">
                    <div class="cd-main-header">
                        <ul class="cd-header-buttons">
                            <li>
                                <a class="cd-search-trigger" href="#cd-search">
                                    <span></span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div id="cd-search" class="cd-search">
                        <form action="#" method="post">
                            <input name="Search" type="search" placeholder="Click enter after typing...">
                        </form>
                    </div>
                </div>
                <!-- //search -->

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">За ЗакарайМе</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-center" href="team.html">Team</a>
                                <a class="dropdown-item text-center" href="404.html">Services</a>

                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
        </header>
        <!-- //header -->
        <!-- banner-text -->
        @if (controller == "Home" && action == "Index")
        {
            <div id="wrapper">
                <!-- Slideshow 1 -->
                <div class="rslides_container">
                    <ul class="rslides" id="slider1">
                        <li>
                            <div class="banner-img">
                                <div class="banner-info text-center">
                                    <h3 class="logo">
                                        @*TODO: change logo to our logo*@
                                        <a class="navbar-brand" href="index.html">
                                            <i class="fas fa-car"></i> Закарай Ме
                                        </a>
                                    </h3>
                                    <h4>Пътувайте споделено в града и извън него</h4>
                                    <div class="banner-form">
                                        <form action="#" method="post">
                                            @*TODO: make form suitable for our app*@
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <input type="text" class="form-control" name="name" placeholder="Name" required="">
                                                </div>
                                                <div class="col-md-3">
                                                    <select class="form-control option">
                                                        <option>Transport From</option>
                                                        <option>Albania</option>
                                                        <option>Belgium</option>
                                                        <option>Cameroon</option>
                                                        <option>Dominica</option>
                                                        <option>France</option>
                                                        <option>Jersey</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <select class="form-control option">
                                                        <option>Transport To</option>
                                                        <option>Colombia</option>
                                                        <option>Indonesia</option>
                                                        <option>Japan</option>
                                                        <option>Lebanon</option>
                                                        <option>Luxembourg</option>
                                                        <option>Montserrat</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <button type="submit" class="btn btn-primary submit">Търси</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="banner-img one">
                                <div class="banner-info text-center">
                                    <h3 class="logo">
                                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-car"></i> Закарай Ме
                                        </a>
                                    </h3>
                                    <h4>Пътувайте споделено в града и извън него</h4>
                                    <div class="content">
                                        <div class="simply-countdown-custom" id="simply-countdown-custom"></div> @*TODO: Add count of users, journeys, etc.*@
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <!-- banner-text -->
            <div class="wrapper-inner">
                <h3 class="logo text-center">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        @*TODO: Add Logo here*@
                        <i class="fas fa-car"></i> Закарай Ме
                    </a>
                </h3>
            </div>
        }

    </div>
    <!-- //banner -->

    <partial name="_CookieConsentPartial" />

    @if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
    {
        //TODO: make errors beautifuller
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@TempData[WebConstants.TempDataSuccessMessageKey]</span>
        </div>
    }
    @if (TempData.ContainsKey(WebConstants.TempDataErrorMessageKey))
    {
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@TempData[WebConstants.TempDataErrorMessageKey]</span>
        </div>
    }
    @if (TempData.ContainsKey(WebConstants.TempDataWarningMessageKey))
    {
        <div class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@TempData[WebConstants.TempDataWarningMessageKey]</span>
        </div>
    }

    @RenderBody()
    <!--footer-->

    <footer>
        <div class="container">
            <div class="footer-top-agileits-w3ls text-center">
